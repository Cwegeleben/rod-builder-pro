{
  "name": "shopify-remix-app-template",
  "private": true,
  "scripts": {
    "diagnostics:explain:productdb": "node scripts/diagnostics/explain-productdb.mjs",
    "build": "remix vite:build",
    "dev": "shopify app dev --config development",
    "config:link": "shopify app config link",
    "generate": "shopify app generate",
    "deploy": "shopify app deploy",
    "deploy:shopify:prod": "cp shopify.app.production.toml shopify.app.toml && shopify app deploy",
    "deploy:shopify:staging": "cp shopify.app.staging.toml shopify.app.toml && shopify app deploy",
    "deploy:fly:prod": "fly deploy --config fly.production.toml --now",
    "deploy:fly:staging": "fly deploy --config fly.staging.toml --now",
    "fly deploy -c fly.production.toml -a rbp-app": "fly deploy -c fly.production.toml -a rbp-app",
    "design-studio:storefront:build": "tsx scripts/design-studio/buildStorefront.ts",
    "release:prod": "npm run typecheck && npm run build && npm run deploy:shopify:prod && fly deploy --config fly.production.toml --now",
    "release:staging": "npm run typecheck && npm run build && npm run deploy:shopify:staging && fly deploy --config fly.staging.toml --now",
    "config:use": "shopify app config use",
    "env": "shopify app env",
    "start": "node server/remix-serve.mjs",
    "docker-start": "npm run setup && npm run start",
    "setup": "prisma generate",
    "migrate:soft": "prisma migrate deploy || echo 'Soft migrate ignored failure'",
    "setup:full": "prisma generate && prisma migrate deploy",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint --fix --cache --cache-location ./node_modules/.cache/eslint .",
    "typecheck": "tsc --noEmit",
    "shopify": "shopify",
    "prisma": "prisma",
    "graphql-codegen": "graphql-codegen",
    "vite": "vite",
    "format": "prettier --write . --ignore-path .gitignore",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "vitest --run --project unit",
    "test:integration": "vitest --run --project integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:record-session": "tsx scripts/playwright/record-session.ts",
    "preflight:links": "tsx scripts/preflight/linkCheck.ts",
    "preflight:routes": "tsx scripts/preflight/checkRouteIdCollisions.ts",
    "e2e:links": "playwright test tests/e2e/links.spec.ts --reporter=list",
    "prepare": "node .husky/install.mjs",
    "preflight:inventory-auth": "node scripts/preflight/inventory-auth-scan.mjs",
    "preflight:admin-links": "tsx scripts/preflight/adminLinks.ts",
    "preflight:admin-templates-sync": "tsx scripts/preflight/adminTemplatesSync.ts",
    "preflight:templates-cost-field": "tsx scripts/preflight/templatesCostField.ts",
    "preflight:importer-smoke": "rm -rf .tmp/crawlee && mkdir -p .tmp && DATABASE_URL=${DATABASE_URL:-file:./.tmp/importer-smoke-dev.sqlite} prisma migrate deploy && DATABASE_URL=${DATABASE_URL:-file:./.tmp/importer-smoke-dev.sqlite} CRAWLEE_STORAGE_DIR=${CRAWLEE_STORAGE_DIR:-.tmp/crawlee} BATSON_SEEDS=${BATSON_SEEDS:-https://batsonenterprises.com/collections/blanks} tsx packages/importer/src/cli/smoke.ts",
    "preflight:design-studio-metrics": "mkdir -p .tmp && DATABASE_URL=${DATABASE_URL:-file:./.tmp/importer-smoke-dev.sqlite} tsx scripts/dev/seedDesignStudioSamples.ts && DATABASE_URL=${DATABASE_URL:-file:./.tmp/importer-smoke-dev.sqlite} tsx scripts/migrate/backfill-design-studio.ts && DATABASE_URL=${DATABASE_URL:-file:./.tmp/importer-smoke-dev.sqlite} DESIGN_STUDIO_SUPPLIERS=${DESIGN_STUDIO_SUPPLIERS:-batson} tsx scripts/migrate/backfill-design-storefront-products.ts && DATABASE_URL=${DATABASE_URL:-file:./.tmp/importer-smoke-dev.sqlite} tsx scripts/diagnostics/designStudioMetrics.ts",
    "smoke:single-seed": "node scripts/smoke/single-seed-run.mjs",
    "theme-editor:smoke": "tsx scripts/smoke/themeEditorSmoke.ts",
    "migrate:templates-cost": "tsx scripts/migrate/migrate-templates-cost.mts",
    "migrate:backfill:publish-handles": "node scripts/migrate/backfill-publish-handles.mjs",
    "validate:templateversion-json": "node scripts/migrate/validate-templateversion-json.mjs",
    "db:check:partstaging": "node scripts/migrate/check-partstaging.mjs",
    "db:cleanup:empty-partstaging": "node scripts/migrate/cleanup-empty-partstaging.mjs",
    "db:cleanup:partstaging": "node scripts/migrate/cleanup-empty-partstaging.mjs && node scripts/migrate/dedupe-partstaging.mjs",
    "db:cleanup:productdb": "node scripts/migrate/clear-productdb.mjs",
    "db:seed:design-studio-samples": "DATABASE_URL=${DATABASE_URL:-file:./prisma/dev.sqlite} tsx scripts/dev/seedDesignStudioSamples.ts",
    "diagnostics:design-studio": "DATABASE_URL=${DATABASE_URL:-file:./prisma/dev.sqlite} tsx scripts/diagnostics/designStudioMetrics.ts",
    "db:backfill:design-studio": "tsx scripts/migrate/backfill-design-studio.ts",
    "db:backfill:design-storefront": "tsx scripts/migrate/backfill-design-storefront-products.ts",
    "<!-- BEGIN RBP GENERATED: design-studio-phase-c-v1 -->": "",
    "migrate:legacy-design-studio-drafts": "tsx scripts/migrateLegacyDesignStudioDrafts.ts",
    "verify:design-studio-phase-c": "tsx scripts/verifyDesignStudioPhaseC.ts",
    "<!-- END RBP GENERATED: design-studio-phase-c-v1 -->": "",
    "db:migrate:deploy": "pnpm db:cleanup:partstaging && pnpm prisma migrate deploy",
    "db:titles:batson": "tsx scripts/migrate/recompute-batson-titles.ts",
    "db:migrate:dev": "pnpm db:cleanup:partstaging && pnpm prisma migrate dev",
    "supplier:sync:batson": "tsx scripts/importer/runBatsonSync.ts",
    "importer:smoke": "BATSON_SEEDS=${BATSON_SEEDS:-https://batsonenterprises.com/collections/blanks} tsx packages/importer/src/cli/smoke.ts",
    "importer:diff": "pnpm exec tsx packages/importer/src/cli/diff-smoke.ts",
    "importer:apply": "pnpm exec tsx packages/importer/src/cli/apply-run.ts",
    "importer:apply:gw": "pnpm exec tsx packages/importer/src/cli/apply-run-via-gateway.ts",
    "importer:refresh:price": "pnpm exec tsx packages/importer/src/cli/run-price-avail.ts",
    "preflight:importer-v2-3": "node scripts/preflight/importer-v2-3.js",
    "preflight:discover:blanks": "SITE_ID=batson-rod-blanks SOURCE_URL=https://batsonenterprises.com/rod-blanks tsx scripts/preflight/discover-site.ts",
    "preflight:discover:reelseats": "SITE_ID=batson-reel-seats SOURCE_URL=https://batsonenterprises.com/reel-seats tsx scripts/preflight/discover-site.ts",
    "preflight:discover:guides": "SITE_ID=batson-guides-tops SOURCE_URL=https://batsonenterprises.com/guides-tip-tops tsx scripts/preflight/discover-site.ts",
    "preflight:discover-seed:guides": "SITE_ID=batson-guides-tops SOURCE_URL=https://batsonenterprises.com/guides-tip-tops tsx scripts/preflight/discoverAndSeed.ts"
  },
